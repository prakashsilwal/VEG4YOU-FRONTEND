<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.merokisanbazar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeroKisanBazar"
        android:usesCleartextTraffic="true">
        <activity android:name=".VerifyOtpActivity"></activity>
        <activity android:name=".NumberActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminActivity"
            android:label="@string/title_activity_admin"
            android:theme="@style/Theme.MeroKisanBazar.NoActionBar" />
        <activity android:name=".AdminLoginActivity" />
        <activity android:name=".ProductActivity" />
        <activity android:name=".ProductDetails" />
        <activity
            android:name=".SellerDashboardActivity"
            android:label="@string/title_activity_seller_dashboard" />
        <activity android:name=".SilderActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>